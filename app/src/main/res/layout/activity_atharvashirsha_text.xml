<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ganeshjii"
    tools:context=".AtharvashirshaTextActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#52000000"
        android:orientation="vertical">
        <TextView
            android:id="@+id/atharvashirshaTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/atharvashirsha"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="19sp"
            android:fontFamily="cursive"
            android:textColor="@color/white"
            android:layout_marginTop="32dp"/>

        <TextView
            android:id="@+id/atharvashirshaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/atharvashirshaText"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold" />


    </LinearLayout>

</ScrollView>